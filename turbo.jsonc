{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV"],
  "globalPassThroughEnv": [
    "RIVEN_PLUGIN_SETTING_*",
    "*_API_KEY",
    "DATABASE_URL",
    "LOG_LEVEL",
    "LOG_DIRECTORY",
    "REDIS_URL",
    "JAEGER_URL",
    "PLEX_SERVER_URL",
    "PLEX_TOKEN",
    "PLEX_LIBRARY_PATH"
  ],
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "check-types": {
      "dependsOn": ["codegen", "transit"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["codegen"]
    },
    "generate-schemas": {
      "outputs": ["lib/__generated__/**"],
      "inputs": ["openapi-schema.json", "*.apib"]
    },
    "codegen": {
      "dependsOn": ["generate-schemas", "^generate-schemas"]
    },
    "test": {
      "dependsOn": ["codegen"]
    },
    "test:watch": {
      "persistent": true,
      "dependsOn": ["codegen"]
    },
    "lint": {},
    "lint:fix": {}
  }
}
